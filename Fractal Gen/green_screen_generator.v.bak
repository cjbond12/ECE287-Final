module green_screen_generator(
    input clk,               // System clock
    input reset,             // Reset signal
    output reg [2:0] color,  // VGA color output
    output reg plot          // VGA plot signal
);

    always @(posedge clk or negedge reset) begin
        if (!reset) begin
            color <= 3'b010; // Green color (binary representation)
            plot <= 1'b1;    // Always plot
        end else begin
            color <= 3'b010; // Keep the screen green
            plot <= 1'b1;    // Keep plotting
        end
    end

endmodule
